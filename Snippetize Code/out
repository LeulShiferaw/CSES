"Modular Exponentiation": {
"scope": "cpp",
"prefix": "expon",
"body": [
"ll exp(int a, int b) {",
"    if(b == 0) return 1;",
"    if(b == 1) return a;",
"",
"    if(b%2 == 0) {",
"        ll temp = exp(a, b/2);",
"        return (temp * temp) % MOD;",
"    }",
"    else return (a*exp(a, b-1)) % MOD;",
"}",
"",
"ll exp2(int a, long long b) {",
"    if(b < MOD) return exp(a, b);",
"    return exp(a, b % (MOD-1));",
"}",
]
}